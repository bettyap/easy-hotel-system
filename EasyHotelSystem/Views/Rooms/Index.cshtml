@model IEnumerable<EasyHotelSystem.Models.Room>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DescQuarto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusQuarto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorDiaria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodReserva)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescQuarto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusQuarto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorDiaria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodReserva)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NumQuarto">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NumQuarto">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NumQuarto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
